<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/PLAY_PARENT"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="0dp">

    <Button
        android:id="@+id/cake"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="66dp"
        android:layout_marginTop="116dp"
        android:background="@drawable/button"
        android:text="@string/cake"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <Button
        android:id="@+id/donuts"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/cake"
        android:layout_marginEnd="64dp"
        android:background="@drawable/button"
        android:text="@string/donuts"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <Button
        android:id="@+id/cookies"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_alignStart="@+id/cake"
        android:layout_below="@+id/cake"
        android:layout_marginTop="64dp"
        android:background="@drawable/button"
        android:text="@string/cookies"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <Button
        android:id="@+id/pie"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_alignBottom="@+id/cookies"
        android:layout_alignStart="@+id/donuts"
        android:background="@drawable/button"
        android:text="@string/pie"
        android:textColor="@color/white"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

</RelativeLayout>

