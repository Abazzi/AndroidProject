<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.example.adambazzi.drurylane.premadeMenu">

    <!-- TODO: Update blank fragment layout -->

    <ListView
        android:id="@+id/premadeDessertListView"
        android:layout_width="match_parent"
        android:layout_height="348dp"
        android:layout_weight="1"
        android:cacheColorHint="@color/purple"
        android:entries="@drawable/donut_edit"
        android:fadingEdge="horizontal"
        android:listSelector="@color/blue"></ListView>

    <TextView
        android:id="@+id/premadeDessertDescription"
        android:layout_width="match_parent"
        android:layout_height="189dp"
        android:layout_weight="1"
        android:textAlignment="center"
        android:textColor="@color/purple"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/howMany"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="@string/how_many"
            android:textAlignment="viewStart"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/premadeNumber"
            android:layout_width="112dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:ems="10"
            android:gravity="end"
            android:inputType="number"
            android:text="0"
            android:textAlignment="center" />

    </LinearLayout>

    <Button
        android:id="@+id/addToCartButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add to Cart"
        android:textColor="@color/green"
        android:background="@drawable/button"
        android:textAlignment="center" />

</LinearLayout>
